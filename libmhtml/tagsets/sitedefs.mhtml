;;; General definitions.
<defsubst site::system-prefix></defsubst>

<defsubst site::data-directory whitespace=delete>
  <get-var mhtml::include-prefix>/../writable/data
</defsubst>

<defsubst site::system-data-directory whitespace=delete>
  <site::data-directory>/system
</defsubst>

<defsubst site::allowed-hosts-file whitespace=delete>
  <site::data-directory>/allowed-hosts
</defsubst>

<defsubst site::user-db whitespace=delete>
  <site::system-data-directory>/user.db
</defsubst>
