;;; header.mhtml: -*- Meta-HTML -*-
;;; This header file is included at the start of every meta-html document
;;; which describes the Meta-HTML language.

<when <not <get-var header-already-included>>>
  <set-var header-already-included=true>
  <include mandefs.mhtml>

  <set-var
    author-name="Brian J. Fox"
    the-author=<get-var author-name>
    author-email="bfox@ai.mit.edu"
    author-url="http://www.metahtml.com/~bfox/"
    manual-ref=<concat <a href="welcome.mhtml">
		       "The <meta-html> Language Reference Manual"
		       </a>>>
  <html>
  <head>
  <title> <get-var title> </title>
  </head>

  <body bgcolor="#FFFFFF">
  <when <not <get-var hacking-frames>>>
    <table border=7 width=600>
      <tr>
	<comment>
	<td valign=center width=35%>
	  <concat <a href="welcome.mhtml">
		  <img src="meta-logo.gif" align=left
		       border=0 alt="Top of Manual">
		  </a>>
	</td>
	  </comment>
	<td width=65%>
	  <center>
	    <small-caps upper=+3 lower=+2 other=+2>
	      The <b>Meta-HTML</b> Language Reference Manual
	    </small-caps>
	  </center>
	</td>
      </tr>
    </table>
    <br clear>
    <table width=600>
      <tr>
	<td align=left>
  </when>

  <include navigate.mhtml>
  <hr size=6 width=75%>
  <center><h2><get-var title></h2></center>
  <p>
  <DEBUGGING-OUTPUT>
</when>
